---
import "../styles/global.css";
import Head from "../components/Head.astro";

export interface Props {
  title: string;
  description: string;
  url: string;
  image?: string;
  icon?: string;
  themeColor?: string;
}

const {
  title,
  description,
  url,
  image = "/iconV2.png",
  icon = "/icon.png",
  themeColor = "#2E3A2F",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    title={title}
    description={description}
    url={url}
    image={image}
    icon={icon}
    themeColor={themeColor}
  />
  <body class="bg-(--bg) min-h-screen flex flex-col font-karla">
    <slot />
  </body>
</html>
