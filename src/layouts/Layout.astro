---
import "../styles/global.css";
import { Font } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  url: string;
  image?: string;
  themeColor?: string;
}

const {
  title,
  description,
  url,
  image = "/icon.png",
  themeColor = "#2E3A2F",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />
    <meta name="theme-color" content={themeColor} />

    <!-- OG/Twitter meta tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={url} />
    <meta property="og:image" content="https://fwleathercraft.com/iconV2.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://fwleathercraft.com/iconV2.png"/>

    <Font cssVariable="--font-lora" />
    <Font cssVariable="--font-karla" />

    <link rel="icon" href="/icon.png" type="image" />
  </head>
  <body class="bg-(--bg) min-h-screen flex flex-col font-karla">
    <slot />
  </body>
</html>
