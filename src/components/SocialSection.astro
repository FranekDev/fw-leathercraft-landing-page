---
import InstagramIcon from "../assets/instagram.svg";
import TikTokIcon from "../assets/tiktok.svg";
import YouTubeIcon from "../assets/youtube.svg";

interface Props {
  socialTitle: string;
  socialDescription: string;
  socials: Array<{
    name: string;
    url: string;
    icon: string;
  }>;
}

const { socialTitle, socialDescription, socials } = Astro.props;

// Icon mapping
const iconMap = {
  instagram: InstagramIcon,
  tiktok: TikTokIcon,
  youtube: YouTubeIcon,
};
---

<section class="py-12 md:py-16 lg:py-20">
  <div class="max-w-4xl mx-auto text-center space-y-8 md:space-y-10">
    <div class="space-y-4 md:space-y-6">
      <h3
        class="text-2xl md:text-3xl lg:text-4xl font-lora font-medium text-(--main) leading-tight"
      >
        {socialTitle}
      </h3>
      <p
        class="text-lg md:text-xl text-(--main)/80 max-w-2xl mx-auto leading-relaxed"
      >
        {socialDescription}
      </p>
    </div>
    <div
      class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center items-center"
      role="group"
    >
      {
        socials.map((social) => {
          const IconComponent = iconMap[social.icon as keyof typeof iconMap];
          return (
            <a
              class="border-2 border-(--main)/30 text-(--main) px-6 md:px-8 py-3 md:py-4 hover:border-(--main) hover:bg-(--main)/10 transition-all duration-300 inline-flex items-center gap-3 text-base md:text-lg font-medium group backdrop-blur-sm"
              href={social.url}
              target="_blank"
              rel="noopener"
            >
              {IconComponent && (
                <IconComponent class="w-5 h-5 md:w-6 md:h-6 group-hover:scale-110 transition-transform" />
              )}
              {social.name}
            </a>
          );
        })
      }
    </div>
  </div>
</section>
