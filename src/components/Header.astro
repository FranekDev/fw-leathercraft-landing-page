---
import Logo from "../assets/logo.svg";

interface Props {
  brandName: string;
  headerButtonText: string;
  headerButtonUrl: string;
}

const { brandName, headerButtonText, headerButtonUrl } = Astro.props;
---

<header class="pt-8 pb-6 md:pt-12 md:pb-8">
  <div
    class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6"
  >
    <div class="flex items-center gap-4 md:gap-6">
      <Logo class="w-14 h-14 md:w-16 md:h-16 flex-shrink-0" fill="#F8E790" />
      <div class="">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl font-lora text-(--main) leading-tight"
        >
          {brandName}
        </h1>
      </div>
    </div>
    <div class="hidden md:flex items-center">
      <a
        href={headerButtonUrl}
        target="_blank"
        rel="noopener"
        class="bg-accent text-main px-6 py-3 transition-all duration-200 hover:bg-accent/90 hover:translate-x-1 inline-flex items-center gap-3 text-sm lg:text-base font-medium"
      >
        {headerButtonText}
        <svg
          class="w-4 h-4 opacity"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          viewBox="0 0 24 24"
          aria-label="Arrow pointing right"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</header>
