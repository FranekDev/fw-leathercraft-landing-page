---
import Product from "./Product.astro";

interface Props {
  productsTitle: string;
  productsDescription: string;
  products: any[];
}

const { productsTitle, productsDescription, products } = Astro.props;
---

<section class="py-12 md:py-16 lg:py-20 px-4 md:px-6">
  <div class="max-w-5xl mx-auto text-center space-y-8 md:space-y-12">
    <div class="space-y-4 md:space-y-6">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-lora font-medium text-(--main) leading-tight"
      >
        {productsTitle}
      </h2>
      <p
        class="text-lg md:text-xl lg:text-2xl text-(--main)/80 max-w-3xl mx-auto leading-relaxed font-light"
      >
        {productsDescription}
      </p>
    </div>
    <div class="grid grid-cols-6 gap-6 md:gap-8 lg:gap-10 max-w-6xl mx-auto">
      {
        products
          .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
          .map((product: any) => (
            <Product
              title={product.data.title}
              description={product.data.description}
              className={product.data.className}
            />
          ))
      }
    </div>
  </div>
</section>
