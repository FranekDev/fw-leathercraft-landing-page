---
const { title, description, className } = Astro.props;
---

<article
  class={`${className} border border-main/30 bg-gradient-to-br from-main/5 to-accent/5 p-6 md:p-8 lg:p-10 xl:p-12 transition-all duration-300 hover:border-main/60 hover:from-main/10 hover:to-accent/10 hover:shadow-xl hover:shadow-main/20 group min-h-[300px] md:min-h-[320px] lg:min-h-[280px] flex flex-col justify-center text-center`}
>
  <div class="space-y-4 md:space-y-5 lg:space-y-6">
    <h3
      class="text-xl md:text-2xl lg:text-3xl xl:text-4xl font-lora font-medium text-main group-hover:text-accent transition-colors duration-300 leading-tight"
    >
      {title}
    </h3>
    <p
      class="text-base md:text-lg lg:text-xl text-main/80 group-hover:text-main leading-relaxed font-light max-w-xs md:max-w-sm lg:max-w-md mx-auto"
    >
      {description}
    </p>
  </div>
</article>
