---
import TopRightArrowIcon from "../assets/top-right-arrow.svg";

interface Props {
  ctaTitle: string;
  ctaSubtitle: string;
  ctaDescription: string;
  ctaButtonPrimary: string;
  ctaButtonPrimaryUrl: string;
  ctaButtonSecondary: string;
  ctaButtonSecondaryUrl: string;
}

const {
  ctaTitle,
  ctaSubtitle,
  ctaDescription,
  ctaButtonPrimary,
  ctaButtonPrimaryUrl,
  ctaButtonSecondary,
  ctaButtonSecondaryUrl,
} = Astro.props;
---

<section
  id="cta-section"
  class="py-12 md:py-16 lg:py-20 border-t border-(--main)/20 border-b"
>
  <div class="max-w-4xl mx-auto text-center space-y-8 md:space-y-10">
    <div class="space-y-4 md:space-y-6">
      <h3
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-lora font-medium text-(--main) leading-tight"
      >
        {ctaTitle}
      </h3>
      <div class="space-y-3 md:space-y-4">
        <p
          class="text-xl md:text-2xl lg:text-3xl text-(--main)/95 font-light max-w-3xl mx-auto leading-relaxed"
        >
          {ctaSubtitle}
        </p>
        <p
          class="text-base md:text-lg lg:text-xl text-(--main)/80 max-w-2xl mx-auto leading-relaxed"
        >
          {ctaDescription}
        </p>
      </div>
    </div>
    <div
      class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center items-center"
    >
      <a
        href={ctaButtonPrimaryUrl}
        target="_blank"
        rel="noopener"
        class="bg-accent text-bg px-10 py-4 hover:bg-accent/90 transition-all duration-200 hover:scale-105 inline-flex items-center gap-3 text-lg font-medium"
      >
        {ctaButtonPrimary}
        <svg
          class="w-5 h-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-label="Instagram icon"
        >
          <path
            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.80 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.80-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.40s-.644-1.44-1.439-1.44z"
          ></path>
        </svg>
      </a>
      <a
        href={ctaButtonSecondaryUrl}
        target="_blank"
        rel="noopener"
        class="border border-accent text-accent px-8 py-4 hover:bg-accent hover:text-bg transition-all duration-200 inline-flex items-center gap-2 rounded-none"
      >
        {ctaButtonSecondary}
        <TopRightArrowIcon />
      </a>
    </div>
  </div>
</section>
